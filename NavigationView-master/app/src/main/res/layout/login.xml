<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout8"
            android:layout_marginBottom="@dimen/_85sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@mipmap/background_pass_user">

            <EditText
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:id="@+id/editTextUsername"
                android:layout_alignTop="@+id/imageView9"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#d1d2d4"
                android:layout_alignBottom="@+id/imageView9"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/imageView9"
                android:background="@mipmap/user"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_4sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_33sdp"
            android:layout_alignTop="@+id/relativeLayout8"
            android:layout_alignLeft="@+id/relativeLayout8"
            android:layout_alignStart="@+id/relativeLayout8"
            android:background="@mipmap/background_pass_user"
            android:id="@+id/relativeLayout9">

            <EditText
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:id="@+id/editTextPassword"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#d1d2d4"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/imageView10"
                android:layout_alignBottom="@+id/imageView10" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/imageView10"
                android:background="@mipmap/pass"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_4sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/relativeLayout9"
            android:layout_alignLeft="@+id/relativeLayout9"
            android:layout_alignStart="@+id/relativeLayout9"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonLogin"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/button_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/textView52"
                android:textColor="#d1d2d4"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
