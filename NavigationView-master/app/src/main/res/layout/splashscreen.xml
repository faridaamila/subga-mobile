<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/background_splash">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBGA MOBILE"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center_vertical|clip_vertical|center_horizontal"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garuda Indonesia Branch Office of"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center|center_horizontal"
            android:textSize="@dimen/_14sdp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surabaya"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center|center_horizontal"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/imageView15"
            android:background="@mipmap/logo_baru"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:layout_above="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="29dp" />
    </RelativeLayout>
</LinearLayout>