<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_height="150dp"
                android:layout_width="350dp"
                android:orientation="vertical"
                android:layout_marginTop="54dp">

                <ViewFlipper

                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:inAnimation="@anim/slide_in_right"
                    android:outAnimation="@anim/slide_out_left"
                    android:id="@+id/viewFlipper1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/ssatu"
                    android:background="@mipmap/ssatu" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:id="@+id/image2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/sdua"
                    android:background="@mipmap/sdua" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:id="@+id/image3"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/stiga"
                    android:background="@mipmap/stiga" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:id="@+id/image4"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/sempat"
                    android:background="@mipmap/sempat" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:id="@+id/image5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/slima"
                    android:background="@mipmap/slima" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:id="@+id/image6"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/senam"
                    android:background="@mipmap/senam" />

                </ViewFlipper>
            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:background="#add1dd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Navigasi"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/relativeLayout4"
            android:layout_alignStart="@+id/relativeLayout4"
            android:layout_marginTop="6dp"
            android:textColor="#115c8c"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="0dp" />

            <RelativeLayout
                android:layout_width="152dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:id="@+id/relativeLayout4"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/relativeLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_new"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/button_new_document" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:id="@+id/relativeLayout6"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/relativeLayout4"
                android:layout_alignStart="@+id/relativeLayout4"
                android:layout_marginBottom="30dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_bookmark"
                    android:background="@mipmap/button_bookmark" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/relativeLayout3"
                android:layout_alignTop="@+id/relativeLayout4"
                android:layout_toRightOf="@+id/relativeLayout4"
                android:layout_toEndOf="@+id/relativeLayout4"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="0dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_download"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="false"
                    android:adjustViewBounds="true"
                    android:background="@mipmap/button_download" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/relativeLayout5"
                android:layout_alignTop="@+id/relativeLayout6"
                android:layout_alignLeft="@+id/relativeLayout3"
                android:layout_alignStart="@+id/relativeLayout3">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/btn_setting"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@mipmap/button_setting" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:background="#115c8c">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="155dp"
                android:id="@+id/imageView7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/home_bawah"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer"/>
</android.support.v4.widget.DrawerLayout>